<div class="container text-center">
  <%= simple_form_for(@restaurant) do |f| %>

    <%= f.input :name %>

    <%= f.input :address %>

    <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"]%>

    <%= f.button :submit %>
  <% end %>
  <p><%= link_to "back to restaurants", restaurants_path %>
</p>
</div>
