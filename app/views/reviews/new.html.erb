<div class="container text-center">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5]%>
    <%= f.submit "add a review", class: "btn btn-primary" %>
  <% end %>
  <p><%= link_to "back to restaurants", restaurants_path %>
</p>
</div>
